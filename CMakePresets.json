{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
				"BUILD_TESTS": "ON"
            }
        },
        {
            "name": "windows-base",
            "hidden": true,
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_SYSTEM_VERSION": "10.0"
            }
        },
        {
            "name": "windows-debug",
            "displayName": "Windows Debug",
            "description": "Debug build with Ninja (no optimizations)",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CUDAPHASH_ENABLE_LTO": "OFF",
                "CUDAPHASH_ENABLE_FAST_MATH": "OFF"
            }
        },
		{
			"name": "windows-release",
			"displayName": "Windows Release",
			"description": "Release build with Ninja (All optimizations)",
			"inherits": "windows-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
        {
            "name": "windows-release-native",
            "displayName": "Windows Release (Native)",
            "description": "Release build optimized for current CPU",
            "inherits": "windows-release",
            "cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
                "CUDAPHASH_ENABLE_NATIVE_ARCH": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-debug-build",
            "configurePreset": "windows-debug",
            "displayName": "Build Windows Debug",
            "description": "Build Windows Debug configuration",
            "configuration": "Debug"
        },
        {
            "name": "windows-release-build",
            "configurePreset": "windows-release",
            "displayName": "Build Windows Release",
            "description": "Build Windows Release configuration",
            "configuration": "Release",
            "jobs": 0
        }
    ],
    "testPresets": [
        {
            "name": "windows-test",
            "configurePreset": "windows-release",
            "displayName": "Test Windows",
            "description": "Run tests on Windows",
            "configuration": "Release",
            "output": {
                "outputOnFailure": true,
                "verbosity": "default"
            }
        }
    ],
    "packagePresets": [
        {
            "name": "windows-package",
            "configurePreset": "windows-release",
            "displayName": "Package Windows Release",
            "description": "Create Windows installer (NSIS) and ZIP package from Release build",
            "configurations": ["Release"],
            "generators": ["NSIS", "ZIP"],
            "vendorName": "Andrew Martin"
        }
    ]
}